package javaprogram;
import java.util.*;

public class Reverse {
	public static void main(String args[]) {
		int num;
		Scanner sc=new Scanner(System.in);
		System.out.println("enter a number");
		num=sc.nextInt();
				int rem,rev=0;
;
		while(num!=0) {
			rem=num%10;
			rev=rev*10+rem;
			num=num/10;
			
			
		}
		System.out.println("reverse is="+rev);
	}

}
